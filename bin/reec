#!/bin/bash
set -ex
if [ -d $SOURCE_ROOT/isa-l ]; then
	cd $SOURCE_ROOT/isa-l
	./autogen.sh
	./configure
	make
	cd /usr/lib
	sudo rm libisal.* || true
	cd -
	sudo make install
fi
cd $SOURCE_ROOT/liberasurecode
./autogen.sh
./configure
make
cd /usr/local/lib
sudo rm liberasurecode.* libnullcode.* libXorcode.* || true
cd -
sudo make install
sudo ldconfig
cd $SOURCE_ROOT/pyeclib
rm -fr *.so build/
sudo pip install -e .
