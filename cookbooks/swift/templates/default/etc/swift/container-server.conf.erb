[DEFAULT]
devices = <%= @srv_path %>
mount_check = false
disable_fallocate = true
bind_port = <%= @bind_port %>
workers = 1
user = vagrant
log_name = container-<%= @bind_port %>
log_facility = LOG_LOCAL2
recon_cache_path = <%= @recon_cache_path %>
eventlet_debug = true

[pipeline:main]
pipeline = recon container-server

[app:container-server]
use = egg:swift#container
allow_versions = true

[filter:recon]
use = egg:swift#recon

[container-replicator]
# vm_test_mode = yes

[container-updater]

[container-auditor]

[container-sync]
